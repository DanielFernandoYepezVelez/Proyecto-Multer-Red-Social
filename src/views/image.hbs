<div class="card">
  <div class="card-header d-flex justify-content-between align-itmes-center">
    <h2>{{imageId.title}}</h2>
    <button class="btn btn-danger" id="btn-delete" data-id="{{imageId.uniqueId}}">
      {{!-- data-id => Para saber a que id quiero eliminar con el bnt-danger --}}
      <i class="fa fa-times"></i> Delete
    </button>
  </div>
  <div class="card-body">

    <p>{{imageId.description}}</p>
    <div class="text-center">
      <img src="upload/{{imageId.filename}}" class="img-fluid" alt="Img">
    </div>
  </div>
  <div class="card-footer d-flex justify-content-between align-items-center">
    <button class="btn btn-success" id="btn-like" data-id="{{imageId.filename}}">

      <i class="fas fa-thumbs-up"></i>Like
    </button>
    <p>
      <span class="likes-count">{{imageId.likes}}</span>
      <i class="fas fa-heart"></i>
    </p>
    <p>
      <i class="fas fa-eye"></i>{{imageId.views}}
    </p>
    <p>
      <i class="far fa-clock"></i>{{moment imageId.timestamp}}
    </p>
  </div>
</div>

<div class="card mt-2">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h3>Comments</h3>
    <button class="btn btn-info" id="btn-toggle-comment">
      <i class="fa fa-comment-o"></i> Post a Comment
    </button>
  </div>
  <div class="card-body">
    <blockquote>
      <form action="/images/{{imageId.uniqueId}}/comment" method="POST">
        <div class="form-group">
          <input type="text" class="form-control" name="name" id="#" placeholder="Name">
        </div>
        <div class="form-group">
          <input type="text" class="form-control" name="email" id="#" placeholder="Email">
        </div>
        <div class="form-group">
          <textarea name="comment" id="#" rows="2" class="form-control" placeholder="Your Comment"></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-success" id="btn-comment">
            <i class="fa fa-comment"></i>Post
          </button>
        </div>
      </form>
    </blockquote>

    <ul class="list-group p-4">
      {{#each comments}}
      <li class="list-group-item">
        <div class="row">
          <a href="#" class="colt-text-center">
            <img src="http://gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45" alt="">
          </a>
          <blockquote class="col">
            <p class="lead">{{comment}}</p>
            <footer class="blockquote-footer">
              {{name}} - {{moment timestamp}}
            </footer>
          </blockquote>
        </div>
      </li>
      {{/each}}
    </ul>
  </div>
</div>