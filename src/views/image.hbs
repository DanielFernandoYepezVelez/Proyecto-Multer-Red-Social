<div class="card">
  <div class="card-header d-flex justify-content-between align-itmes-center">
    <h2>{{imageId.title}}</h2>
    <button class="btn btn-danger" id="btn-delete" data-id="{{imageId.uniqueId}}">
      {{!-- data-id => Para saber a que id quiero eliminar con el bnt-danger --}}
      <i class="fa fa-times"></i> Delete
    </button>
  </div>
  <div class="card-body">

    <p>{{imageId.description}}</p>
    <div class="text-center">
      <img src="upload/{{imageId.filename}}" class="img-fluid" alt="Img">
    </div>
  </div>
  <div class="card-footer d-flex justify-content-between align-items-center">
    <button class="btn btn-success" id="btn-like" data-id="{{imageId.filename}}">

      <i class="fas fa-thumbs-up"></i>Like
    </button>
    <p>
      <span class="likes-count">{{imageId.likes}}</span>
      <i class="fas fa-heart"></i>
    </p>
    <p>
      <i class="fas fa-eye"></i>{{imageId.views}}
    </p>
    <p>
      <i class="far fa-clock"></i>{{moment imageId.timestamp}}
    </p>
  </div>
</div>